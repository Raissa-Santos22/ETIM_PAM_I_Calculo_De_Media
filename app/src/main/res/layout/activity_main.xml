<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/wave__1_"
        app:layout_constraintTop_toTopOf="@id/resultado"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/wave__2_"/>



    <TextView android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_marginTop="60dp"
        android:drawableStart="@drawable/baseline_person_24"
        android:gravity="center"
        android:text="Calculo de Media"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:id="@+id/nota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nota 1"
        android:padding="20dp"
        android:background ="#E9789D"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:inputType="number"
        android:maxLength="2"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/nota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nota 2"
        android:padding="20dp"
        android:background ="#E9789D"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:inputType="number"
        android:maxLength="2"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo"/>

    <EditText
        android:id="@+id/nota3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nota 3"
        android:padding="20dp"
        android:background ="#E9789D"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:inputType="number"
        android:maxLength="2"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/nota1"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/nota4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nota 4"
        android:padding="20dp"
        android:background ="#E9789D"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:inputType="number"
        android:maxLength="2"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/nota2"
        app:layout_constraintEnd_toEndOf="parent"/>

        <EditText android:id="@+id/numeroFaltas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#EDB5C8"
            android:hint="Numero de Faltas"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nota3"/>

    <Button android:id="@+id/btncalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_below = "@id/numeroFaltas"
        android:layout_margin="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#E03F6D"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius = "5dp"
        app:layout_constraintTop_toBottomOf="@id/numeroFaltas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:text="Aluno aprovado!"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btncalcular"/>



</androidx.constraintlayout.widget.ConstraintLayout>